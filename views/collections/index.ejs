<%- include('../partials/header.ejs') %>

<h1>Welcome to uCollection</h1>
<h1>HOLOLIVE</h1>
<a href='/collection/new'>
    <button>Add new collection</button>
</a>

<% collection.forEach(function(collection){ %>
    <div class='content'>
        <div>
            <img src='<%= collection.image %>'>
            <h2><%= collection.name %></h2>
            <h3><%= collection.desc %></h3>
            <a href='/collection/<%= collection._id %>'>
                <button>View</button>
            </a>
            <button>Edit</button>
        </div>
    </div>  
<% }); %>

