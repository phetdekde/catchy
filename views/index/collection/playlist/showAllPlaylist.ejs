<section class="all-playlist big-box-display">
    <div class="container">
        <p><%= user.username %>'s playlist</p>
        <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
            <div class="new-playlist">
                <form action='/playlist' method='POST' enctype="multipart/form-data">
                    <div>
                        <label>Playlist name</label>
                        <input type='text' name='playlist[playlistName]' placeholder='Enter playlist name' required>
                    </div>
                    <div>
                        <label>Image</label>
                        <input type='file' name='playlistImg' accept="image/*">
                    </div>
                    <button type="submit">Submit</button>
                </form>
            </div>
        <% } %>
        <div class="collection">
            <% playlist.forEach(function(playlist){ %>
                <div class='content'>
                    <div class="song-info">
                        <img src='<%= playlist.playlistImg %>'>
                        <div class="song-artist">
                            <p id="viewPlaylist" class="link" data-id="<%= playlist._id %>"><%= playlist.playlistName %></p>
                        </div>
                    </div>
                    <ul>
                        <li><img id="playOnePlaylist" class="play-btn" data-id="<%= playlist._id %>" src="/images/play.png" alt="Play playlist"></li>
                    </ul>
                </div>  
            <% }); %>
        </div>
    </div>
</section>