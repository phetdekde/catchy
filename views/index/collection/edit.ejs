<section class="editSong">
    <div class="container">
        <form action='/song/<%= song._id %>?_method=PUT' method='POST' enctype="multipart/form-data">
            <div>
                <label>Song name</label>
                <input type='text' name='song[songName]' placeholder='<%= song.songName %>' value='<%= song.songName %>'>
            </div>
            <div>
                <label>Image</label>
                <img src='<%= song.songImg %>' width = "300px">
                <input type='file' name='songImg' accept="image/*">
            </div>
            <div>
                <label>Lyric</label>
                <input type='text' name='song[lyric]' placeholder='<%= song.lyric %>' value='<%= song.lyric %>'>
            </div>
            <div>
                <label>Artist</label>
                <input type='text' name='artist[artistName]' placeholder='<%= song.artist.artistName %>' value='<%= song.artist.artistName %>'>
            </div>
            <div>
                <label>Song</label>
                <input type='file' name='songFile' accept="audio/*">
            </div>
            <button type="submit">Submit</button>
            <a href='/index'>Go back</a>
        </form>
    </div>
</section>
