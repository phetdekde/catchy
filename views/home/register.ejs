<body>

<%- include('../partials/welcome-nav.ejs') %>  


<section class="register">
    <div class="container">
        <div class="logo">
            <h1>cAtchy</h1>
        </div>
        <div class="col">
            <form action='/register' method='POST' enctype='multipart/form-data'>
                <h2>SIGN UP</h2>
                <h3>Enter your username</h3>
                <input type='text' name='username' placeholder='Enter your username' required>
                <h3>Enter your password</h3>
                <input type='password' name='password' placeholder='Enter your password' required>
                <h3>Enter your email</h3>
                <input type='email' name='email' placeholder='Enter your email' required>
                <h3>Choose your profile picture</h3>
                <input type='file' name='profileImg' accept='image/*'>
                <!-- <h3>Enter your admin code</h3>
                <input type='text' name='adminCode' placeholder='Enter your admin code'> -->
                <button class="register-btn" type='submit'>REGISTER</button>
            </form>
        </div>
    </div>
</section>

